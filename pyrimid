#include <iostream>

int main() {
    int rows;

    
    std::cout << "Enter the number of rows for the pyramid: ";
    std::cin >> rows;

    for (int i = 1; i <= rows; ++i) {
      
        for (int j = 1; j <= rows - i; ++j) {
            std::cout << " ";
        }

        
        for (int j = 1; j <= i; ++j) {
            std::cout << j << " ";
        }

      
        for (int j = i - 1; j >= 1; --j) {
            std::cout << j << " ";
        }

        std::cout << std::endl;
    }

    return 0;
}
