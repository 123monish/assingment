#include <iostream>

int main() {
    double num1, num2, num3;
    double average;

    std::cout << "Enter three numbers separated by spaces: ";
    std::cin >> num1 >> num2 >> num3;

    // Calculate the average
    average = (num1 + num2 + num3) / 3;

    std::cout << "The average of " << num1 << ", " << num2 << ", and " << num3 << " is: " << average << std::endl;

    return 0;
}
